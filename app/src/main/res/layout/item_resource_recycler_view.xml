<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/file_list_item"
    android:paddingBottom="2dp"
    style="?android:listSeparatorTextViewStyle"
    >


    <TextView
        android:id="@+id/file_name_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_element_height"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="18sp" />


    <ImageButton
        android:id="@+id/delete_file_button_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_element_height"
        android:layout_weight="0.1"
        android:background="@color/colorBackground"
        app:srcCompat="@mipmap/delete_file"/>

    <ImageButton
        android:id="@+id/download_file_button_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_element_height"
        android:layout_weight="0.1"
        app:srcCompat="@mipmap/download_file"
        android:background="@color/colorBackground"
       />

    <ImageButton
        android:id="@+id/file_details_button_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_element_height"
        android:layout_weight="0.1"
        android:background="@color/colorBackground"
        app:srcCompat="@mipmap/show_details" />


</LinearLayout>